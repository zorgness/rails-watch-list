<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.image_url %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="button-add-movie">
    <%= link_to 'add a movie', new_list_bookmark_path(@list), class: "btn btn-success"  %>
</div>


<div class="container">
  <% @bookmarks.each do |bookmark| %>
    <img src="<%= bookmark.movie.poster_url %>" alt="" style="width:200px" >
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.movie.rating%></p>
    <p><%= bookmark.comment %></p>
    <%= link_to "Delete",
                            bookmark_path(bookmark),
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
  <% end %>
  </div>


  <%= link_to "Delete list",
                        list_path(@list),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class: "btn btn-success" %>



  <h2>Reviews</h2>

  <% @list.reviews.each do |review|%>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
  <% end %>

  <%= link_to 'add a review', new_list_review_path(@list) %>

  <%= link_to 'go back', root_path %>
