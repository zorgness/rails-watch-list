<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.image_url %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="button-add-movie">
    <%= link_to 'add a movie', new_list_bookmark_path(@list), class: "btn btn-dark rounded"  %>
</div>


<div class="container list-container">

    <% @bookmarks.each do |bookmark| %>
      <div class="card col-md-4" style="width: 24rem;">
          <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Card image cap">
          <div class="card-body">
            <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
              <p><%= bookmark.movie.rating%></p>
              <p><%= bookmark.comment %></p>
              <%= link_to "Delete",
                                  bookmark_path(bookmark),
                                  method: :delete,
                                  data: { confirm: "Are you sure?" } %>
          </div>
      </div>
    <% end %>


  </div>

<div class="button-add-movie">
  <%= link_to "Delete list",
                        list_path(@list),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>



  <h2>Reviews</h2>

  <% @list.reviews.each do |review|%>

    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= review.rating %></h2>
         <p><%= review.content %></p>
      </div>
    </div>
  <% end %>

<div class="button-footer">
  <%= link_to 'add a review', new_list_review_path(@list),class: 'btn btn-info' %>

  <%= link_to 'go back', root_path ,class: 'btn btn-primary'%>
</div>
